parameter[geometry] = Open            

parameter[p0c]                      = 9.9999986944003E8
parameter[particle]                 = Positron
parameter[absolute_time_tracking]    = F

beginning[beta_a]    = 10
beginning[beta_b]    = 10


!-------------------------------------------------------

slave_drift_0_1: drift, l = 0.5
PFORK: Photon_Fork, to_line = L2
slave_drift_0_3: drift, l = 0.5
M: Marker
D1: Pipe, L = 1
M3: Marker

!-------------------------------------------------------
! Branch: L2

D2: Pipe, L = 1
FORK2: Fork, to_line = L1, to_element = M, NEW_BRANCH = F
FF: Fork, to_line = MM, to_element = M3\1

!-------------------------------------------------------
! Branch: MM


!-------------------------------------------------------
! Overlays, groups, rampers, and superimpose

superimpose, element = D1, ref = slave_drift_0_1, offset = 0.25

!-------------------------------------------------------
! Lattice lines


!-------------------------------------------------------

multi_line_01: line[multipass] = ( M3)

L1: line = ( slave_drift_0_1, PFORK, slave_drift_0_3, M)

L2: line = ( D2, FORK2, FF)

L2[geometry] = Open
L2[z_position]     = 0.5
L2[particle] = Photon
L2[p0c]      = 100
L2[inherit_from_fork]      = F

MM: line = ( multi_line_01, multi_line_01)

MM[geometry] = Closed
MM[z_position]     = 1.5
MM[particle] = Positron
MM[p0c]      = 10000
MM[inherit_from_fork]      = F

use, L1
